@model ApplicationCore.Models.ClientDetailsModel

<div class="rounded">
    <div class="container-fluid bg-light">
        <div class="col-md-4">
            <form asp-action="UpdateClient">
                <div asp-validation-summary="ModelOnly"></div>
                <div hidden class="form-group">
                    <label asp-for="Id">Id</label>
                    <input asp-for="Id" class="form-control" value="@Model.Id">
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" value="@Model.Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email address</label>
                    <input asp-for="Email" class="form-control" value="@Model.Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phones">Phone number</label>
                    <input asp-for="Phones" class="form-control" value="@Model.Phones">
                    <span asp-validation-for="Phones" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" class="form-control" value="@Model.Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AddedOn">Added Date</label>
                    <span>@Model.AddedOn</span>
                </div>
                <div hidden class="form-group">
                    <label asp-for="AddedOn">Id</label>
                    <input asp-for="AddedOn" class="form-control" value="@Model.AddedOn">
                    <span asp-validation-for="AddedOn" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>

            <form asp-action="DeleteClient">
                <div asp-validation-summary="ModelOnly"></div>
                <div hidden class="form-group">
                    <label asp-for="Id">Id</label>
                    <input asp-for="Id" class="form-control" value="@Model.Id">
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
                <div class="row">
                    @if (Model.Interactions.Count == 0)
                    {
                        <div>
                            No Interactions

                        </div>
                    }
                    else
                    {
                        @foreach (var interaction in Model.Interactions)
                        {
                            <div class="col-3">
                                <partial name="_InteractionCard" model="interaction" />

                            </div>
                        }
                    }

                </div>

        </div>
    </div>
