@model ApplicationCore.Models.EmployeeDetailsModel

<div class="rounded">
    <div class="container-fluid bg-light">
        <div class="col-md-4">
            <form asp-action="UpdateEmployee">
                <div asp-validation-summary="ModelOnly"></div>
                <div hidden class="form-group">
                    <label asp-for="Id">Id</label>
                    <input asp-for="Id" class="form-control" value="@Model.Id">
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" value="@Model.Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Designation">Designation</label>
                    <input asp-for="Designation" class="form-control" value="@Model.Designation">
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
                <div hidden class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control" value="@Model.Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>

            <form asp-action="DeleteEmployee">
                <div asp-validation-summary="ModelOnly"></div>
                <div hidden class="form-group">
                    <label asp-for="Id">Id</label>
                    <input asp-for="Id" class="form-control" value="@Model.Id">
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
        <div class="row">
            @if (Model.Interactions.Count == 0)
            {
                <div>
                    No Interactions

                </div>
            }
            else
            {
                @foreach (var interaction in Model.Interactions)
                {
                    <div class="col-3">
                        <partial name="_InteractionCard" model="interaction" />

                    </div>
                }
            }

        </div>

    </div>
</div>
