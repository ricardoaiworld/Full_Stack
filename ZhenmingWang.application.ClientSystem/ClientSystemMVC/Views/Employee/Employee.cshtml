@model List<ApplicationCore.Models.EmployeeCardResponseModel>


<div class="rounded">
    <div class="container-fluid bg-light">
        <div>
            <a href='@Url.Action("NewEmployee", "Employee")'>
                <input type='button' value='+' />
            </a>
            Add Employee
        </div>
        <div class="row">
            @if (Model.Count == 0)
            {
                <div>
                    No Employee

                </div>
            }
            else
            {
                @foreach (var employee in Model)
                {
                    <div class="col-3">
                        <partial name="_EmployeeCard" model="employee" />

                    </div>
                }
            }
        </div>
    </div>
</div>
